{
  "verbose": true,
  "rootDir": ".",
  "roots": ["./src"],
  "transformIgnorePatterns": ["/node_modules/", "\\.pnp\\.[^\\/]+$"],
  "testEnvironment": "node",
  "setupFiles": ["<rootDir>/src/test/env.setup.js"],
  "setupFilesAfterEnv": ["<rootDir>/src/test/db.setup.js"],
  "globalSetup": "<rootDir>/src/test/global.setup.js",
  "globalTeardown": "<rootDir>/src/test/teardown.setup.js",
  "collectCoverage": true,
  "coverageProvider": "v8",
  "coverageDirectory": "tmp/coverage",
  "collectCoverageFrom": ["<rootDir>/**/*.js", "<rootDir>/src"],
  "coveragePathIgnorePatterns": ["/node_modules/", "/src/test/", "/src/server.js", "/src/db.js", "/src/test/"],
  "testTimeout": 10000
}
