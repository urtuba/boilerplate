{
  "name": "boilerplate",
  "version": "0.0.1",
  "description": "Express boilerplate to start developing business logic with tests and environments.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --exec babel-node src/server.js -r dotenv/config",
    "test": "jest --coverage --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/urtuba/boilerplate.git"
  },
  "keywords": [
    "express",
    "node",
    "api",
    "babel",
    "swagger",
    "2023",
    "nodemon",
    "jest"
  ],
  "author": "urtuba",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/urtuba/boilerplate/issues"
  },
  "homepage": "https://github.com/urtuba/boilerplate#readme",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.0.0",
    "nanoid": "^5.0.2",
    "request-ip": "^3.3.0",
    "response-time": "^2.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.2",
    "@babel/eslint-parser": "^7.22.15",
    "@babel/node": "^7.22.19",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/plugin-transform-runtime": "^7.23.9",
    "@babel/preset-env": "^7.23.2",
    "babel-plugin-module-resolver": "^5.0.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "silent": true,
    "verbose": true,
    "rootDir": ".",
    "roots": [
      "./src"
    ],
    "transformIgnorePatterns": [
      "/node_modules/",
      "\\.pnp\\.[^\\/]+$"
    ],
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/src/utils/test/env.setup.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/utils/test/db.setup.js"
    ],
    "globalSetup": "<rootDir>/src/utils/test/global.setup.js",
    "globalTeardown": "<rootDir>/src/utils/test/teardown.setup.js",
    "collectCoverage": true,
    "coverageProvider": "v8",
    "coverageDirectory": "tmp/coverage",
    "collectCoverageFrom": [
      "<rootDir>/**/*.js",
      "<rootDir>/src"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/src/test/",
      "/src/server.js",
      "/src/db.js",
      "/src/utils/test/",
      "src/middlewares"
    ],
    "testTimeout": 10000
  }
}
